<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_id"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvGame"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/sfprobold"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toEndOf="@+id/ivImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="120dp"
        android:layout_height="104dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/metacritic"
        android:layout_width="68dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sfpromedium"
        android:text="metacritic:"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toEndOf="@+id/ivImage"
        app:layout_constraintTop_toBottomOf="@+id/tvGame"
        app:layout_constraintVertical_bias="0.178" />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="163dp"
        android:layout_height="19dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/sfproregular"
        android:text="Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="29dp"
        android:layout_height="19dp"
        android:fontFamily="@font/sfprobold"
        android:text="Text"
        android:textColor="#D80000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/metacritic"
        app:layout_constraintTop_toBottomOf="@+id/tvGame"
        app:layout_constraintVertical_bias="0.16" />

</androidx.constraintlayout.widget.ConstraintLayout>